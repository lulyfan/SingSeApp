<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mine_fragment"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorPrimary"

        android:titleTextAppearance="@color/toolbarText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"

                android:text="会员中心"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/user_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.yxb.android.shengseshequ.utils.ZdingyiImageView
                    android:id="@+id/final_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="点击登录"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text=""

                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/user_idNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text=""
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/user_icon_change"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@mipmap/abc_ic_ab_back_holo_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/colorPrimaryDark"


                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="#fff"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/chat_with"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="私信"
                    android:textColor="#fff"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/friends"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="好友"
                    android:textColor="#fff"
                    android:textSize="19sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mineBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:id="@+id/my_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我的提醒"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@mipmap/url_content_forward" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#BDBDBD" />

        <LinearLayout
            android:id="@+id/read_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="浏览记录"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:src="@mipmap/url_content_forward" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:id="@+id/my_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我的帖子"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:src="@mipmap/url_content_forward"

                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#BDBDBD" />

        <LinearLayout
            android:id="@+id/my_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="我的回复"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:src="@mipmap/url_content_forward" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="设置"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:src="@mipmap/url_content_forward"

                />


        </LinearLayout>


    </LinearLayout>

