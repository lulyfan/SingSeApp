<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mineBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/login_out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:src="@mipmap/abc_ic_ab_back_holo_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="22sp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/mineBackground"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="账号"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loginshape"
                android:ems="10"
                android:layout_marginLeft="50dp"
                android:hint="用户名/UID/手机"
                android:inputType="textPersonName"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#BDBDBD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="密码"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loginshape"
                android:ems="10"
                android:layout_marginLeft="50dp"
                android:hint="请输入密码"
                android:inputType="textPassword" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/mineBackground"
            android:layout_height="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="19sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="注册账号  |"
            android:textSize="20dp"
           android:layout_marginTop="25dp"
            android:gravity="right"
            android:textColor="#436EEE"
            />
        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:text="  忘记密码"
            android:textSize="20dp"
            android:textColor="#436EEE"
            />
    </LinearLayout>

    <com.yxb.android.shengseshequ.utils.ZdingyiImageView
        android:id="@+id/login_way_icon"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/icon"
        />


</LinearLayout>
