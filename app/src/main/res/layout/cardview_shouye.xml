<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="title"
                android:textStyle="bold"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="title"
                android:textSize="13dp" />
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/picture1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/picture" />
                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/picture2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/picture" />
                <ImageView
                    android:layout_margin="3dp"
                    android:id="@+id/picture3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/picture" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_pingl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textSize="12dp"
                    android:layout_alignTop="@+id/tv_time"
                    android:layout_toRightOf="@+id/pingltu"
                    android:layout_toEndOf="@+id/pingltu" />

                <ImageView
                    android:id="@+id/pingltu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pingl"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_time"
                    android:layout_toEndOf="@+id/tv_time"
                    android:layout_marginLeft="62dp"
                    android:layout_marginStart="62dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/yuanjing"
                    android:layout_marginLeft="34dp"
                    android:layout_marginStart="34dp"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_pingl"
                    android:layout_toEndOf="@+id/tv_pingl" />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_reader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读"
                    android:textSize="12dp"
                    android:layout_alignTop="@+id/tv_pingl"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />

                <com.yxb.android.shengseshequ.utils.ZdingyiImageView
                    android:id="@+id/simageView_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/usericon" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/simageView_icon"
                    android:layout_toRightOf="@+id/simageView_icon"
                    android:layout_weight="1"
                    android:text="用户名"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="时间"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_username"
                    android:layout_toEndOf="@+id/tv_username"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

